<div class="container-fluid padding">
  <div class="form">
      <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.present? %>
        <p class="form-errors">
          <%= @user.errors.full_messages.join(", ") %>
        </p>
      <% end %>
      <div class="form-group">
        <%= form.label :current_password %> <br>
        <%= form.password_field :current_password, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :new_password %> <br>
        <%= form.password_field :new_password, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :password_confirmation %> <br>
        <%= form.password_field :password_confirmation, class:"form-control"%>
      </div>
      <%= form.submit "Update", class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>