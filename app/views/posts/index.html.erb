<div class="container-fluid">
    <div class="row">
        <% @posts.take(15).each do | post|%>
            <div class="row col-md-6 col-lg-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= link_to(post.title, post_path(post))%>
                        </h4>
                        <p class="card-text"><%= post.body.first(50) %>...
                        </p>
                    </div>   
                </div>
            </div>  
        <% end %>
    </div>
</div>

