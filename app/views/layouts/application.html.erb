<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
  <div class="navbar-brand">
  <%= link_to 'Blog_on_rails', root_path %></div>

  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <ul class="navbar-nav ml-auto">
    <li><%= link_to 'Home', root_path %></li>
    <% if current_user %>
    <li><%= link_to current_user.name, edit_user_path(current_user) %></li>
    <li><%= link_to 'New Post', new_post_path %></li>
    <li><%= link_to 'Sign Out', session_path, method: :delete, data: {confirm: "are you sure you want to log"} %></li>
    <% else %>
    <li><%= link_to 'Sign Up', new_user_path %></li>
    <li><%= link_to 'Sign In', new_session_path %></li>
    <% end %>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
